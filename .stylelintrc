{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order",
    "stylelint-processor-styled-components"
  ],
  "overrides": [
    {
      "extends": [
        "stylelint-config-recommended-scss",
        "stylelint-config-recess-order"
      ],
      "files": [
        "**/*.scss"
      ]
    },
    {
      "extends": [
        "stylelint-config-recommended-less",
        "stylelint-config-recess-order"
      ],
      "customSyntax": "postcss-less",
      "files": [
        "**/*.less"
      ]
    }
  ]
}